<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CalculateSavingActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/abl_calculate_saving_screen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="4dp"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/tb_calculate_saving_screen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            app:navigationIcon="@drawable/ic_back"
            app:title="Calculate Savings"
            app:titleTextAppearance="@style/title_default" />
    </com.google.android.material.appbar.AppBarLayout>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_area"
        android:layout_width="match_parent"
        android:text="20"
        android:layout_margin="@dimen/default_margin"
        app:layout_constraintTop_toBottomOf="@id/abl_calculate_saving_screen"
        android:layout_height="wrap_content"/>

    <Spinner
        android:id="@+id/s_tonnage"
        android:layout_margin="@dimen/default_margin"

        app:layout_constraintTop_toBottomOf="@id/tv_area"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Spinner
        android:id="@+id/s_state"
        android:layout_width="match_parent"
        android:layout_margin="@dimen/default_margin"

        app:layout_constraintTop_toBottomOf="@id/s_tonnage"
        android:layout_height="wrap_content"/>

    <Spinner
        android:id="@+id/s_month"
        app:layout_constraintTop_toBottomOf="@id/s_state"
        android:layout_width="match_parent"
        android:layout_margin="@dimen/default_margin"

        android:layout_height="wrap_content"/>

    <com.google.android.material.button.MaterialButton
        android:layout_width="match_parent"
        android:id="@+id/b_calculate"
        android:text="Done"
        android:layout_margin="@dimen/default_margin"

        app:cornerRadius="@dimen/default_corner_radius"
        android:textAllCaps="false"
        app:layout_constraintTop_toBottomOf="@id/s_month"
        android:layout_height="wrap_content"/>


</androidx.constraintlayout.widget.ConstraintLayout>