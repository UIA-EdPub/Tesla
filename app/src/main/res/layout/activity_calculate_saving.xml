<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CalculateSavingActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/abl_calculate_saving_screen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="4dp"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/tb_calculate_saving_screen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            app:navigationIcon="@drawable/ic_back"
            app:title="Calculate Savings"
            app:titleTextAppearance="@style/title_default" />
    </com.google.android.material.appbar.AppBarLayout>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_area"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/button_text_style"
        android:layout_margin="@dimen/default_margin"
        android:text="20"
        app:layout_constraintTop_toBottomOf="@id/abl_calculate_saving_screen" />

    <Spinner
        android:id="@+id/s_tonnage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/default_margin"
        app:layout_constraintTop_toBottomOf="@id/tv_area" />

    <Spinner
        android:id="@+id/s_state"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/default_margin"
        app:layout_constraintTop_toBottomOf="@id/s_tonnage" />

    <Spinner
        android:id="@+id/s_month"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/default_margin"
        app:layout_constraintTop_toBottomOf="@id/s_state" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_calculate"
        android:layout_width="match_parent"
        android:layout_height="@dimen/min_button_height"
        android:layout_margin="@dimen/default_margin"
        android:alpha="0.2"
        app:cardBackgroundColor="@color/green1"
        app:cardCornerRadius="@dimen/default_corner_radius"
        app:layout_constraintTop_toBottomOf="@id/s_month" />

    <com.google.android.material.textview.MaterialTextView
        style="@style/button_text_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calculate"
        app:layout_constraintBottom_toBottomOf="@id/cv_calculate"
        app:layout_constraintLeft_toLeftOf="@id/cv_calculate"
        app:layout_constraintRight_toRightOf="@id/cv_calculate"
        app:layout_constraintTop_toTopOf="@id/cv_calculate" />


</androidx.constraintlayout.widget.ConstraintLayout>