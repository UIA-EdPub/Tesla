<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CalculateSavingActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/abl_calculate_saving_screen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="4dp"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/tb_calculate_saving_screen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            app:navigationIcon="@drawable/ic_back"
            app:title="Calculate Savings"
            app:titleTextAppearance="@style/title_default" />
    </com.google.android.material.appbar.AppBarLayout>

    <LinearLayout
        android:id="@+id/ll_area"
        style="@style/ll_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/message_background"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/abl_calculate_saving_screen">

        <com.google.android.material.textview.MaterialTextView
            style="@style/small_text_style_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Roof Area" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_area"
            style="@style/small_text_style_description"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="20" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_cost"
        style="@style/ll_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/message_background"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/ll_area">

        <com.google.android.material.textview.MaterialTextView
            style="@style/small_text_style_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Cost" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_cost"
            style="@style/small_text_style_description"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="20" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_saving"
        style="@style/ll_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/message_background"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/ll_cost">

        <com.google.android.material.textview.MaterialTextView
            style="@style/small_text_style_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Energy Saved" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_saving"
            style="@style/small_text_style_description"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="20" />
    </LinearLayout>


